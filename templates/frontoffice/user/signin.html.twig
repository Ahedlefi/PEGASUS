{% extends 'frontoffice/home/base_front.html.twig' %}

{% set disable_react = true %}
{% block title %}Sign In{% endblock %}

{% block body %}
<div class="auth-shell">
    <div class="auth-card">
        <h2>Sign In</h2>
        <p class="auth-subtitle">Welcome back, access your account.</p>

        {% if error %}
            <div class="auth-error">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        {% for message in app.flashes('success') %}
            <div class="auth-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="auth-error">{{ message }}</div>
        {% endfor %}

        <form method="post" action="{{ path('frontoffice_signin') }}" class="auth-form">
            <div>
                <label for="username">Email</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" required autofocus>
            </div>
            <div>
                <label for="password">Password</label>
                <input type="password" id="password" name="_password" required>
            </div>
            <div class="auth-inline-link">
                <a href="{{ path('frontoffice_forgot_password') }}">Forgot password?</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="auth-btn" type="submit">Sign In</button>
        </form>

        <div class="auth-links">
            <a href="{{ path('app_frontoffice_home') }}">Back to main</a>
            <a href="{{ path('frontoffice_signup_role') }}">Create an account</a>
        </div>
    </div>
</div>
<style>
.auth-shell {
    min-height: calc(100vh - 2rem);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    background: linear-gradient(135deg, #090909 0%, #1a1a1a 60%, #111111 100%);
}
.auth-card {
    width: 100%;
    max-width: 520px;
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 10px 35px rgba(0, 0, 0, 0.25);
}
.auth-card h2 {
    margin: 0;
    color: #111827;
    font-size: 1.85rem;
}
.auth-subtitle {
    margin: 0.4rem 0 1.2rem;
    color: #4b5563;
}
.auth-error {
    margin-bottom: 1rem;
    padding: 0.75rem;
    border-radius: 0.6rem;
    background: #fee2e2;
    color: #991b1b;
}
.auth-success {
    margin-bottom: 1rem;
    padding: 0.75rem;
    border-radius: 0.6rem;
    background: #dcfce7;
    color: #166534;
}
.auth-form label {
    display: block;
    margin-bottom: 0.4rem;
    color: #111827;
    font-weight: 600;
}
.auth-form input {
    width: 100%;
    margin-bottom: 0.9rem;
    padding: 0.7rem 0.8rem;
    border: 1px solid #d1d5db;
    border-radius: 0.6rem;
    outline: none;
}
.auth-form input:focus {
    border-color: #ff6600;
    box-shadow: 0 0 0 3px rgba(255, 102, 0, 0.15);
}
.auth-btn {
    margin-top: 0.2rem;
    width: 100%;
    border: 0;
    border-radius: 0.6rem;
    background: #ff6600;
    color: #111827;
    font-weight: 700;
    padding: 0.75rem 1rem;
    cursor: pointer;
}
.auth-btn:hover {
    background: #ff7f2a;
}
.auth-inline-link {
    margin: 0.2rem 0 0.8rem;
    text-align: right;
}
.auth-inline-link a {
    color: #6b7280;
    text-decoration: none;
    font-size: 0.9rem;
}
.auth-inline-link a:hover {
    color: #ff6600;
}
.auth-links {
    margin-top: 1rem;
}
.auth-links a {
    color: #ff6600;
    text-decoration: none;
    font-weight: 600;
}
.auth-links a + a {
    margin-left: 1rem;
}
.auth-links a:hover {
    color: #ff7f2a;
}
</style>
{% endblock %}
