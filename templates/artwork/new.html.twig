{% extends 'base.html.twig' %}

{% block title %}Nouvel Artwork{% endblock %}

{% block body %}
<div class="row">
    <!-- Sidebar -->
    <div class="col-md-3 col-lg-2 mb-4">
        <div class="sidebar">
            <h5 class="mb-3">
                <i class="fas fa-cog me-2"></i>Menu
            </h5>
            <nav class="nav flex-column">
                <a class="nav-link" href="{{ path('app_artwork_index') }}">
                    <i class="fas fa-list me-2"></i>Liste des Artworks
                </a>
                <a class="nav-link active" href="{{ path('app_artwork_new') }}">
                    <i class="fas fa-plus me-2"></i>Ajouter un Artwork
                </a>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="col-md-9 col-lg-10">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h3 mb-0">
                    <i class="fas fa-plus me-2"></i>Ajouter un nouvel Artwork
                </h1>
                <p class="text-muted mb-0">Remplissez les informations pour créer un nouvel artwork</p>
            </div>
            <div>
                <a href="{{ path('app_artwork_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>

        <!-- Form Card -->
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-info-circle me-2"></i>Informations de l'Artwork
                </h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
                
                <div class="row">
                    <div class="col-md-8">
                        <!-- Title Field -->
                        <div class="mb-4">
                            {{ form_label(form.title, 'Titre', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.title, {'attr': {'class': 'form-control form-control-lg', 'placeholder': 'Entrez le titre de l\'artwork...'}}) }}
                            {{ form_errors(form.title) }}
                            <div class="form-text">Le titre sera affiché comme nom principal de l'artwork.</div>
                        </div>

                        <!-- Description Field -->
                        <div class="mb-4">
                            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'Décrivez votre artwork en détail...'}}) }}
                            {{ form_errors(form.description) }}
                            <div class="form-text">Une description détaillée aide les visiteurs à comprendre votre œuvre.</div>
                        </div>

                        <!-- Image URL Field -->
                        <div class="mb-4">
                            {{ form_label(form.imageUrl, 'URL de l\'image', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="fas fa-image"></i>
                                </span>
                                {{ form_widget(form.imageUrl, {'attr': {'class' : 'form-control', 'placeholder': 'https://example.com/image.jpg'}}) }}
                            </div>
                            {{ form_errors(form.imageUrl) }}
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                Collez l'URL directe d'une image valide.<br>
                                Assurez-vous que l'URL pointe directement vers le fichier image (.jpg, .png, .gif, .webp).
                            </div>
                        </div>

                        <!-- Status Field -->
                        <div class="mb-4">
                            {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'form-label fw-bold'}}) }}
                            {{ form_widget(form.status, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.status) }}
                            <div class="form-text">
                                <i class="fas fa-info-circle me-1"></i>
                                <strong>Brouillon:</strong> Non visible publiquement<br>
                                <strong>Publié:</strong> Visible par tout le monde<br>
                                <strong>Archivé:</strong> Masqué mais conservé
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <!-- Preview Card -->
                        <div class="card border-secondary">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="fas fa-eye me-2"></i>Aperçu
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="preview">
                                    <div class="text-center mb-3">
                                        <div class="rounded bg-light d-flex align-items-center justify-content-center" 
                                             style="width: 100%; height: 200px;">
                                            <i class="fas fa-image fa-3x text-muted"></i>
                                        </div>
                                    </div>
                                    <h5 class="text-muted">Titre de l'artwork</h5>
                                    <p class="text-muted small">La description apparaîtra ici...</p>
                                    <span class="badge bg-secondary">Brouillon</span>
                                </div>
                            </div>
                        </div>

                        <!-- Tips -->
                        <div class="card mt-3 border-info">
                            <div class="card-header bg-light text-info">
                                <h6 class="mb-0">
                                    <i class="fas fa-lightbulb me-2"></i>Conseils
                                </h6>
                            </div>
                            <div class="card-body">
                                <ul class="small mb-0">
                                    <li>Utilisez une image de bonne qualité</li>
                                    <li>Soyez descriptif dans votre description</li>
                                    <li>Choisissez un titre accrocheur</li>
                                    <li>Vérifiez l'URL de l'image avant de publier</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Form Actions -->
                <div class="row mt-4">
                    <div class="col-12">
                        <hr>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_artwork_index') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-2"></i>Annuler
                            </a>
                            <div>
                                <button type="submit" class="btn btn-primary me-2">
                                    <i class="fas fa-save me-2"></i>Enregistrer l'artwork
                                </button>
                                <button type="submit" name="save_and_continue" class="btn btn-outline-primary">
                                    <i class="fas fa-save me-2"></i>Enregistrer et continuer
                                </button>
                            </div>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const titleInput = document.querySelector('#{{ form.title.vars.id }}');
    const descriptionInput = document.querySelector('#{{ form.description.vars.id }}');
    const imageUrlInput = document.querySelector('#{{ form.imageUrl.vars.id }}');
    const statusSelect = document.querySelector('#{{ form.status.vars.id }}');
    const preview = document.querySelector('#preview');
    
    function updatePreview() {
        const title = titleInput.value || 'Titre de l\'artwork';
        const description = descriptionInput.value || 'La description apparaîtra ici...';
        const imageUrl = imageUrlInput.value;
        const status = statusSelect.value;
        
        let statusBadge = 'bg-secondary';
        let statusText = 'Brouillon';
        
        if (status === 'published') {
            statusBadge = 'bg-success';
            statusText = 'Publié';
        } else if (status === 'archived') {
            statusBadge = 'bg-secondary';
            statusText = 'Archivé';
        } else {
            statusBadge = 'bg-warning';
            statusText = 'Brouillon';
        }
        
        let imageHtml = '';
        if (imageUrl) {
            imageHtml = `<img src="${imageUrl}" alt="${title}" class="rounded" style="width: 100%; height: 200px; object-fit: cover;" onerror="this.outerHTML='<div class=\\'rounded bg-light d-flex align-items-center justify-content-center\\' style=\\'width: 100%; height: 200px;\\'><i class=\\'fas fa-image fa-3x text-muted\\'></i></div>'">`;
        } else {
            imageHtml = '<div class="rounded bg-light d-flex align-items-center justify-content-center" style="width: 100%; height: 200px;"><i class="fas fa-image fa-3x text-muted"></i></div>';
        }
        
        preview.innerHTML = `
            <div class="text-center mb-3">
                ${imageHtml}
            </div>
            <h5 class="mb-2">${title}</h5>
            <p class="text-muted small mb-2">${description.slice(0, 100)}${description.length > 100 ? '...' : ''}</p>
            <span class="badge ${statusBadge}">${statusText}</span>
        `;
    }
    
    titleInput.addEventListener('input', updatePreview);
    descriptionInput.addEventListener('input', updatePreview);
    imageUrlInput.addEventListener('input', updatePreview);
    statusSelect.addEventListener('change', updatePreview);
});
</script>
{% endblock %}
